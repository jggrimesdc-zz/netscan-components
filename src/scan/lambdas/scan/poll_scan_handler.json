{
  "openapi": "3.0.1",
  "info": {
    "title": "cyberscan-api",
    "version": "2020-08-21T18:35:12Z"
  },
  "paths": {
    "/cyberscan/scan/poll": {
      "post": {
        "tags": [
          "Scan"
        ],
        "summary": "Check the status of a scan",
        "operationId": "pollScan",
        "description": "Retries a previously submitted scan.",
        "parameters": [
          {
            "in": "header",
            "name": "x-netscan-customeraccountid",
            "description": "netscan Account ID for the Customer.  Provisioned by netscan.",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "[0-9]{3}"
            }
          },
          {
            "in": "header",
            "name": "x-netscan-userid",
            "description": "netscan User ID for the Customer.  Provisioned by netscan.",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "[a-v0-9]{20}"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          },
          "400": {
            "description": "If the customer account or user id is not formatted properly according to the specified pattern, or if either are missing, a bad request will be returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errorMessage": {
                      "type": "string",
                      "description": "Error message."
                    },
                    "errorDetails": {
                      "type": "array",
                      "description": "Details of the error.",
                      "items": {
                        "type": "string",
                        "description": "Erroneous fields in the request."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
